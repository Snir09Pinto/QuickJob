<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="0dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="20dp"
    >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/ricvl_request_image_image_view"
            android:scaleType="fitXY"
            />

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ricl_user_image_card_view"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ricvl_request_image_image_view"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ricvl_user_image_image_view"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>




        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ricvl_user_name_text_view"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@id/ricl_user_image_card_view"
            app:layout_constraintTop_toTopOf="@id/ricl_user_image_card_view"
            app:layout_constraintStart_toEndOf="@+id/ricl_user_image_card_view"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="13sp"
            android:text=""
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ricvl_request_title_text_view"
            app:layout_constraintTop_toBottomOf="@id/ricl_user_image_card_view"
            app:layout_constraintRight_toRightOf="parent"
            android:maxLines="2"
            android:breakStrategy="simple"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/ricl_user_image_card_view"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_bold"
            android:textStyle="bold"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text=""
            android:layout_margin="8dp"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:id="@+id/ricvl_request_type_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text=""
            android:layout_margin="8dp"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:id="@+id/ricvl_request_date_and_time_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>